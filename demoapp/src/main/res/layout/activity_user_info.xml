<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/demo_common_gradient_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/title_view" >
    </include>

    <RelativeLayout
        android:id="@+id/layout_userinfo_txid"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        android:background="@color/user_info_bg"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/img_user_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:src="@drawable/icon_user" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_user_tx"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_userinfo_indiction"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="好友账号："
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_userinfo_userid"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ID"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_userinfo_del"
        style="@style/btn_large_style"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:onClick="onClick_del"
        android:text="删除联系人"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_userinfo_back"
        style="@style/btn_large_style"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/total_btn_margin"
        android:layout_marginRight="@dimen/total_btn_margin"
        android:layout_marginTop="24dp"
        android:text="返回" />

</LinearLayout>