<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_gray_black_gradient_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/title_view" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        android:background="@color/user_info_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_set_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_user" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/img_set_user"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_set_user"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_set_useridind"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="当前登录:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_set_userid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="id"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_set_logout"
        style="@style/btn_large_style"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="34dp"
        android:text="注销" />

    <Button
        android:id="@+id/btn_set_manageuser"
        style="@style/btn_large_style"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:text="用户管理"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_set_cancel"
        style="@style/btn_large_style"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:text="取消" />

</LinearLayout>