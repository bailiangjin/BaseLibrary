<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Button 样式 -->
    <style name="app_common_bg">

        <item name="android:background">@drawable/demo_common_gradient_bg</item>
    </style>

    <!-- TextView 样式 -->
    <style name="tab_tv_style" parent="@style/tv_base_style">

        <item name="android:textSize">@dimen/tv_size_xsmall</item>
        <item name="android:textColor">@drawable/tv_color_selector_grey_green</item>
    </style>

</resources>
